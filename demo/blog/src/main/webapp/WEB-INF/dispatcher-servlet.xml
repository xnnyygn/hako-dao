<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="org.hako.dao.demo.blog.controller" />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	<bean id="dbVendor" class="org.hako.dao.db.vendor.DbcpVendor">
	   <constructor-arg>
	       <map>
	           <entry key="driverClassName" value="org.h2.Driver" />
	           <entry key="url" value="jdbc:h2:mem:dev" />
	           <entry key="username" value="sa" />
	           <entry key="password" value="" />
	       </map>
	   </constructor-arg>
	</bean>
	
	<bean class="org.hako.dao.demo.blog.controller.DbInitializer">
	   <property name="initSqlPath" value="src/test/resources/init.sql" />
	   <property name="dbVendor" ref="dbVendor" />
	</bean>
    
    <bean id="blogService" class="org.hako.dao.demo.blog.service.BlogService">
        <property name="blogManager">
            <bean class="org.hako.dao.demo.blog.service.BlogManager">
                <constructor-arg>
                    <bean class="org.hako.dao.db.client.DefaultDbClient">
                        <constructor-arg ref="dbVendor" />
                        <constructor-arg value="true" />
                    </bean>
                </constructor-arg>
            </bean>
        </property>
    </bean>
    
</beans>